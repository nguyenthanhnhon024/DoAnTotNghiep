    <!-- Nucleo Icons -->
    <link href="/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <!-- CSS Files -->
    <link id="pagestyle" href="/assets/css/material-dashboard.css?v=3.0.0" rel="stylesheet" />


    <!-- Font Icon -->
    <link rel="stylesheet" href="/assets/CTSV/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="/assets/CTSV/vendor/jquery-ui/jquery-ui.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/assets/CTSV/css/style.css">

</head>
<body class="g-sidenav-show  bg-gray-200">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3   bg-gradient-dark" id="sidenav-main">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand m-0" href="/PhongCTSV/Home/Index">
                <img src="~/assets/img/logoute.png" class="navbar-brand-img h-100" alt="main_logo">
                <span class="ms-1 font-weight-bold text-white">Phòng CTSV</span>
            </a>
        </div>
        <hr class="horizontal light mt-0 mb-2">
        <div class="collapse navbar-collapse  w-auto  max-height-vh-100" id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white " href="@Url.Action("Index", "CNDotCham" )">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">assignment</i>
                        </div>
                        <span class="nav-link-text ms-1">Cập nhật đợt chấm DRL</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white active bg-gradient-primary" href="@Url.Action("Index", "CNTaiKhoan" )">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">notifications</i>
                        </div>
                        <span class="nav-link-text ms-1">Cập nhật tài khoản phòng ban</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white " href="@Url.Action("Index", "CNLop" )">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">dashboard</i>
                        </div>
                        <span class="nav-link-text ms-1">Cập nhật danh sách lớp</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white " href="@Url.Action("Index", "CNSinhVien" )">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                        <span class="nav-link-text ms-1">Cập nhật danh sách sinh viên</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white " href="@Url.Action("Index", "XemDRL" )">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">person</i>
                        </div>
                        <span class="nav-link-text ms-1">Xem điểm rèn luyện</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white " href="@Url.Action("Index", "CapNhatTT" )">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">view_in_ar</i>
                        </div>
                        <span class="nav-link-text ms-1">Cập nhật thông tin cá nhân</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white " href="@Url.Action("UpdateMK", "CapNhatTT" )">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">format_textdirection_r_to_l</i>
                        </div>
                        <span class="nav-link-text ms-1">Đổi mật khẩu</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="sidenav-footer position-absolute w-100 bottom-0 ">
            <div class="mx-3">
                <a class="btn bg-gradient-primary mt-4 w-100" href="/Login/Index" onclick="return confirm('Bạn có chắc muốn đăng xuất chứ?');" type="button">Đăng Xuất</a>
            </div>
        </div>
    </aside>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <!-- Navbar -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Phòng CTSV</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Cập nhật tài khoản phòng ban</li>
                    </ol>

                </nav>
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <ul class="navbar-nav  justify-content-end">
                        <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                                <div class="sidenav-toggler-inner">
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="white-box">
            @if (TempData["AlertMessage"] != null)
            {
                <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                    @TempData["AlertMessage"]
                </div>}
        </div>
        <!-- End Navbar -->
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card my-4">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                                <h6 class="text-white text-capitalize ps-3">Thêm mới tài khoản phòng ban</h6>
                            </div>
                        </div>
                        @{
                            var selectList = new SelectList(
                                new List<SelectListItem>
                                {
                                            new SelectListItem {Text = "Giáo Viên", Value = "1"},
                                            new SelectListItem {Text = "Phòng Đoàn", Value = "2"},
                                            new SelectListItem {Text = "Phòng CTSV", Value = "3" },
                                            new SelectListItem {Text = "Phòng KHTC", Value = "4" },
                                            new SelectListItem {Text = "Phòng Đào Tạo", Value = "5" },
                }, "Value", "Text");
                            var selectListGT = new SelectList(
                                new List<SelectListItem>
                                {
                                            new SelectListItem {Text = "Nam", Value = "0"},
                                            new SelectListItem {Text = "Nữ", Value = "1"},
            }, "Value", "Text");
                        }
                    <div class="input-group input-group-outline col-md-10" style="margin:20px">
                        @using (Html.BeginForm("Create", "CNTaiKhoan", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="col-12">
                                <a>Mã Tài Khoản:</a>
                                <div class="col-md-10" style="margin:10px">
                                    @Html.EditorFor(model => model.maTK, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.maTK, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-12">
                                <a>Họ Tên:</a>
                                <div class="col-md-10" style="margin:10px; width:600px">
                                    @Html.EditorFor(model => model.hoTen, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.hoTen, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-12">
                                <a>Giới Tính:</a>
                                <div class="col-md-10" style="margin:10px">
                                    @Html.DropDownList("gioiTinh", selectListGT, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.gioiTinh, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-12">
                                <a>Phòng Ban:</a>
                                <div class="col-md-10" style="margin:10px">
                                    @Html.DropDownList("maPB", selectList, new { @class = "form-control", @id = "select" })
                                    @Html.ValidationMessageFor(model => model.maPB, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-12">
                                <a  id="chinhiem2">Chủ Nhiệm Lớp:</a>
                                <div class="col-md-10" style="margin:10px">
                                    @Html.DropDownList("chuNhiemLop", null, new { @class = "form-control", @id = "chunhiem", @style = "display:none" })

                                    @Html.ValidationMessageFor(model => model.chuNhiemLop, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-submit" style="margin-top:8px">
                                <input type="submit" id="submit" class="btn-success" value="Thêm ngay" onclick="return confirm('Bạn có chắc muốn thêm mới tài khoản này?');"/>
                            </div>
                            <div class="btn btn-warning">
                                @Html.ActionLink("Quay Lại", "Index")
                            </div>
                        }

                    </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </main>

    <!-- JS -->
    <script src="/assets/CTSV/vendor/jquery/jquery.min.js"></script>
    <script src="/assets/CTSV/vendor/jquery-ui/jquery-ui.min.js"></script>
    <script src="/assets/CTSV/js/main.js"></script>

    <!--   Core JS Files   -->
    <script src="/assets/js/core/popper.min.js"></script>
    <script src="/assets/js/core/bootstrap.min.js"></script>
    <script src="/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="/assets/js/plugins/smooth-scrollbar.min.js"></script>
    <script src="/assets/js/plugins/chartjs.min.js"></script>

    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="/assets/js/material-dashboard.min.js?v=3.0.0"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $('#AlertBox').removeClass('hide');
        $('#AlertBox').delay(3000).slideUp(700);

        $('#select').change(function () {
            var selected = $('option:selected', this).attr('value');
            //var optionText = $('.editable').text();

            if (selected == 1) {
                $('#chinhiem2').show();
                $('#chunhiem').show();
            } else {
                $('#chinhiem2').hide();
                $('#chunhiem').hide();
            }
        });
        var selected = $('option:selected', '#select').attr('value');
        if (selected == 1) {
            $('#chinhiem2').show();
            $('#chunhiem').show();
        }
    </script>
</body>
</html>
