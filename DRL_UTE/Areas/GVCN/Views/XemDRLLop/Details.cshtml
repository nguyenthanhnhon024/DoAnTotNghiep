                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card my-4">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                                <h6 class="text-white text-capitalize ps-3">Đanh sách sinh viên</h6>
                            </div>
                        </div>
                        <div class="card-body px-0 pb-2">
                            <div class="table-responsive p-0">
                                @using (Html.BeginForm("Details", "XemDRLLop", FormMethod.Post))
                                {
                    <div class="input-group input-group-outline col-md-4">
                        <div class="col-md-5"></div>
                        <div class="col-md-4">
                            <input type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập tên sinh viên muốn tìm" class="form-control" />

                        </div>
                        <div class="col-md-2" style="margin-left:20px">
                            <input type="submit" value="Tìm kiếm" class="btn btn-outline-success" />
                        </div>
                    </div>}
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr style="background-color:aquamarine">
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder">Họ Tên</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Mã Sinh Viên</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Lớp</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Tổng Điểm</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Tình Trạng Điểm</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Thao Tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ var idDC = 0;
                                            var stt = 0;}
                                        @if (Model.Count() != 0)
                                        {
                                            foreach (var item in Model)
                                            {
                                                stt = stt + 1;
                                                if (stt == 1) { idDC = item.idDC; }
                            <tr>
                                <td style="color:red; padding-left: 35px;">@Html.DisplayFor(modelItem => item.tenSV)</td>
                                <td>@Html.DisplayFor(modelItem => item.maSV)</td>
                                <td>@Html.DisplayFor(modelItem => item.maLop)</td>
                                <td style="color:red; padding-left: 35px;">@Html.DisplayFor(modelItem => item.tongDiem)</td>
                                @if (item.ttCham == 3)
                                {


            <td class="align-middle text-center text-sm" style="padding-right:60px">
                <span class="badge badge-sm bg-gradient-success">done</span>
            </td>
 }
        else
        {
<td class="align-middle text-center text-sm" style="padding-right:60px">
    <span class="badge badge-sm bg-gradient-secondary">UNDONE</span>
</td>
}
                                <td class="align-middle" style="padding-top:25px">
                                    @Html.ActionLink("Xem Chi Tiết", "Chitiet", "XemDRLLop", new { @maSV = @item.maSV }, new { @class = "btn btn-success btn-sm" })
                                </td>
                            </tr>
 }
                    }
                    else if (Model.Count() == 1)
                    {
        <tr>
            <td></td>
            <td>Hiện tại chưa có sinh viên nào tự đánh giá!! Hãy nhắc nhở thành viên lớp hoàn thành sớm!!</td>
        </tr>
}
                                    </tbody>
                                </table>
                                <div class="pagination-container" style="background-color:lightpink; color:white; margin:20px;padding-left:10px">
                                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Details", new { @idDC = idDC, page, @searchString = @ViewBag.SearchString }), new PagedListRenderOptions { LinkToFirstPageFormat = "<< First", LinkToPreviousPageFormat = "< Previous |", LinkToNextPageFormat = "| Next >", LinkToLastPageFormat = "Lass >>", DelimiterBetweenPageNumbers = "|" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

